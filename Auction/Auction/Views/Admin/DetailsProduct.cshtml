@model Auction.Models.Product
@{
    ViewBag.Title = "DetailsProduct";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}


<h2 class="text-center">Detail Product</h2>
<div class="content-wrapper p-5">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <form id="formData" method="post">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Id</label>
                                    <input class="form-control" name="cat_id" readonly value="@Model.p_id" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Category</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.Category.cat_name" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Name</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.p_name" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Price</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.p_price" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Increment</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.p_increment" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Description</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.p_description" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Date of Creation</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.p_dateOfCreation" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Start Date</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.p_start_date" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> End Date</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.p_end_date" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Status</label>
                                    @if (Model.p_status == 1)
                                    {
                                        <input class="form-control" name="cat_status" readonly value="Active" />
                                    }
                                    else
                                    {
                                        <input class="form-control" name="cat_status" readonly value="Deactive" />
                                    }
                                </div>
                                <br />
                                <div>
                                    <button type="button" class="editBtn btn btn-primary" data-id="@Model.p_id">
                                        Edit
                                    </button>
                                    <button type="button" id="cancelBtn" class="cancelBtn btn btn-primary" data-id="@Model.p_id">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="thumb">
                                    <img src="@Url.Content(ViewBag.image.ToString())" class="img-thumbnail img-fluid" alt="Image" id="ArtImage" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(".editBtn").click(function () {
        $.ajax({
            url: '@Url.Action("EditProduct", "Admin")',
            data: {
                Id: $(this).attr("data-id"),
                pageNo: "@ViewBag.pageNo",
                search: "@ViewBag.search"
            }
        })
            .done(function (response) {
                $("#actionContainer").html(response);
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAIL");
            });
    });

   $("#cancelBtn").click(function () {
            $.ajax({
                url: '@Url.Action("ProductTable", "Admin")',
                  data: {
                    pageNo: "@ViewBag.pageNo",
                    search: "@ViewBag.search"
                }
            })
                .done(function (response) {
                    $("#tableContainer").html(response);
                    $("#actionContainer").html("");
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });
    });
</script>

