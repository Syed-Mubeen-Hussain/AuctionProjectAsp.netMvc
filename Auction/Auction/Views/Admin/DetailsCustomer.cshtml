@model Auction.Models.Customer
@{
    ViewBag.Title = "DetailsCategory";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}


<h2 class="text-center">Details Customer</h2>
<div class="content-wrapper p-5">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <form id="formData" method="post">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Id</label>
                                    <input class="form-control" name="cat_id" readonly value="@Model.c_id" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">First Name</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.c_firstName" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Last Name</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.c_lastName" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Age</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.c_age" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Phone</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.c_phone" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Gender</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.c_gender" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Address</label>
                                    <textarea class="form-control" name="cat_name" readonly>@Model.c_address</textarea>
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Email</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.c_email" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Username</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.c_userName" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Register Date</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.register_date" />
                                </div>
                                <br>
                                <div>
                                    <button type="button" id="cancelBtn" class="cancelBtn btn btn-primary" data-id="@Model.c_id">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="thumb">
                                    <img src="@Url.Content(Model.c_image)" class="img-thumbnail img-fluid" alt="Image" id="ArtImage" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
   $("#cancelBtn").click(function () {
            $.ajax({
                url: '@Url.Action("CustomerTable","Admin")',
            })
                .done(function (response) {
                    $("#tableContainer").html(response);
                    $("#actionContainer").html("");
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });
    });
</script>

