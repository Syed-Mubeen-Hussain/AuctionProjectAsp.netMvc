@model Auction.ViewModels.OrderDetailsViewModel
@{
    ViewBag.Title = "DetailsCategory";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}


<h2 class="text-center">Details Customer</h2>
<div class="content-wrapper p-5">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <form id="formData" method="post">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Id</label>
                                    <input class="form-control" name="cat_id" readonly value="@Model.order.o_id" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Username</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.order.Customer.c_userName" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Email</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.order.o_email" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Phone</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.order.o_phone" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Address</label>
                                    <textarea class="form-control" name="cat_name" readonly>@Model.order.o_address</textarea>
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Zip</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.order.o_zip" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Total Amount</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.order.o_total_amout" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Status</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.order.o_status" />
                                </div>
                                <br>
                                <div>
                                    <button type="button" id="cancelBtn" class="cancelBtn btn btn-primary" data-id="@Model.order.o_id">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h4>Products</h4>
                                <hr />
                                @if (Model != null && Model.products.Count > 0)
                                {
                                    int sno = 1;
                                    <div style="display: flex;justify-content: space-between;font-size: 18px;font-weight: bold;margin-bottom:5px;">
                                        <span>Name</span>
                                        <span>Price</span>
                                    </div>
                                    foreach (var product in Model.products)
                                    {
                                        <div style="display: flex;justify-content: space-between;margin: 5px 0px;font-size: 16px;">
                                            <span>@(sno++). @product.p_name</span>
                                            <span>Rs. @product.p_price</span>
                                        </div>
                                    }
                                    <hr />
                                    <div style="display: flex;justify-content: space-between;font-weight: bold;margin-bottom:5px;">
                                        <span style="font-size: 18px;">Total</span>
                                        <span style="color:blue;font-size: 18px;">Rs. @Model.order.o_total_amout</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
   $("#cancelBtn").click(function () {
            $.ajax({
                url: '@Url.Action("OrderTable","Admin")',
            })
                .done(function (response) {
                    $("#tableContainer").html(response);
                    $("#actionContainer").html("");
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });
    });
</script>

