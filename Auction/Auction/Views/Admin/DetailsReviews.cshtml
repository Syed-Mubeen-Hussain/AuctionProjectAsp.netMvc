@model Auction.Models.Review
@{
    ViewBag.Title = "DetailsReviews";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}


<h2 class="text-center">Details Reviews</h2>
<div class="content-wrapper p-5">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <form id="formData" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Id</label>
                                    <input class="form-control" name="cat_id" readonly value="@Model.r_id" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Username</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.r_username" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Email</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.r_email" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Stars</label>
                                    <input class="form-control" name="cat_name" readonly value="@Model.r_stars" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Message</label>
                                    <textarea class="form-control" readonly>@Model.r_message</textarea>
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Status</label>
                                    @if (Model.r_status == 1)
                                    {
                                        <input class="form-control" name="cat_status" readonly value="Active" />
                                    }
                                    else
                                    {
                                        <input class="form-control" name="cat_status" readonly value="Deactive" />
                                    }
                                </div>
                                <br>
                                <div>
                                    <button type="button" id="cancelBtn" class="cancelBtn btn btn-primary" data-id="@Model.r_id">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
   $("#cancelBtn").click(function () {
            $.ajax({
                url: '@Url.Action("ReviewsTable","Admin")',
            })
                .done(function (response) {
                    $("#tableContainer").html(response);
                    $("#actionContainer").html("");
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });
    });
</script>

